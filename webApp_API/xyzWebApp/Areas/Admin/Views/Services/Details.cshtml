@model xyzWebApp.Models.Service

@{
    ViewData["Title"] = "Details";
}

<h1 class="font-monospace">Details</h1>

<div class="container overflow-hidden">
    <div class="row gx-5">
        <div class="col">
            <div class="p-3 border bg-dark text-white">
                <dl class="row font-monospace">
                    <dt class="fs-5">Name of the product:</dt>
                    <dd class="fs-7">@Model.Title</dd>
                    <dt class="fs-5">Desription:</dt>
                    <dd class="fs-7">@Model.Description</dd>
                    <dt class="fs-5">Price:</dt>
                    <dd class="fs-7">@Model.Price</dd>
                </dl>
            </div>
        </div>
        <div class="col">
            <div class="p-3 bg-white">
                <img src="~/images/services/@Html.DisplayFor(model => model.Image)" width="450" height="600" />
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-dark font-monospace" asp-action="Index">Back to List</a>
</div>
