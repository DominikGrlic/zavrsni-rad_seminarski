@model xyzWebApp.Areas.Identity.Data.ApplicationUser

@using Microsoft.AspNetCore.Identity
@using xyzWebApp.Areas.Identity.Data

@inject UserManager<ApplicationUser> _userManager;

@{
    ViewData["Title"] = "Delete";
}

<h1 class="font-monospace">Delete</h1>

<h3 class="font-monospace">Are you sure you want to delete this?</h3>
<div class="font-monospace">
    <h4 class="font-monospace">Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Model.UserName
        </dt>
        <dd class = "col-sm-10">
            @Model.UserName
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @{
                var roles = await _userManager.GetRolesAsync(Model);
                foreach(string role in roles)
                {
                    <p>@role.ToString()</p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Model.FirstName
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            @Model.LastName
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
