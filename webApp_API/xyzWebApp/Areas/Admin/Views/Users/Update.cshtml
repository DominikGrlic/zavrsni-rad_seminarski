@model xyzWebApp.Areas.Identity.Data.ApplicationUser

@using Microsoft.AspNetCore.Identity
@using xyzWebApp.Areas.Identity.Data

@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "UPDATE USER";
}

<h1 class="font-monospace">Update user</h1>
<a asp-action="Index" class="btn btn-secondary font-monospace">Back</a>
<div asp-validation-summary="All" class="text-danger font-monospace"></div>

<form asp-action="Update" method="post">
    <div class="form-group font-monospace">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group font-monospace">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group font-monospace">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group font-monospace">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group font-monospace">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group font-monospace">
        <label for="password">Password</label>
        <input name="password" class="form-control" />
    </div>
    <hr />
    <div class="form-group font-monospace">
        <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="roles">
            <option value="0">PICK A ROLE...</option>
            <option value="1">Customer</option>
            <option value="2">Administrator</option>
        </select>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary font-monospace">Save</button>
</form>