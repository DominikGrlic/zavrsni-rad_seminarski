@using xyzWebApp.Areas.Identity.Data;

@model IEnumerable<ApplicationUser>

<h1 class="text font-monospace">All Users</h1>
<a asp-action="Create" class="btn btn-secondary font-monospace">Create a User</a>

<hr />

<table class="table table-dark table-hover font-monospace">
    <tr class="text-center">
        <th>ID</th>
        <th>User name</th>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Edit</th>
    </tr>
    @foreach (ApplicationUser user in Model)
    {
        <tr class="text-center">
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a class="btn btn-secondary" asp-action="Update" asp-route-id="@user.Id">Update</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
</table>